<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Employee Payroll System â€“ Dashboard</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar">
    <div class="logo-icon">ğŸ‘¤</div>
    <h1>Employee Payroll</h1>
  </nav>

  <div class="container">

    <!-- Page Header -->
    <div class="page-header">
      <h2>Employee Details</h2>
      <div class="header-actions">
        <div class="search-icon">ğŸ”</div>
        <a href="/add" class="btn-add">+ Add User</a>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">ğŸ‘¥</div>
        <div class="stat-label">Total Employees</div>
        <div class="stat-value"><%= totalEmployees %></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">ğŸ›ï¸</div>
        <div class="stat-label">Departments</div>
        <div class="stat-value"><%= departments %></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">ğŸ’°</div>
        <div class="stat-label">Total Basic Salary</div>
        <div class="stat-value">â‚¹<%= totalBasic.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">ğŸ“‹</div>
        <div class="stat-label">Total Tax (12%)</div>
        <div class="stat-value">â‚¹<%= totalTax.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">ğŸ’µ</div>
        <div class="stat-label">Total Net Salary</div>
        <div class="stat-value">â‚¹<%= totalNet.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">ğŸ“ˆ</div>
        <div class="stat-label">Average Salary</div>
        <div class="stat-value">â‚¹<%= avgSalary.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></div>
      </div>
    </div>

    <!-- Employee Table -->
    <div class="table-card">
      <% if (employees.length === 0) { %>
        <div class="empty-state">
          <div class="empty-icon">ğŸ“­</div>
          <p>No employees found. <a href="/add">Add one now!</a></p>
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Gender</th>
              <th>Department</th>
              <th>Salary</th>
              <th>Tax (12%)</th>
              <th>Net Salary</th>
              <th>Start Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% employees.forEach(emp => {
                 const tax = emp.salary * 0.12;
                 const net = emp.salary - tax;
                 const formattedDate = new Date(emp.startDate).toLocaleDateString('en-IN', {day:'2-digit', month:'short', year:'numeric'});
            %>
            <tr>
              <td>
                <div class="user-cell">
                  <div class="avatar <%= emp.gender === 'Female' ? 'female' : 'male' %>">
                    <%= emp.gender === 'Female' ? 'ğŸ‘©' : 'ğŸ‘¨' %>
                  </div>
                  <%= emp.name %>
                </div>
              </td>
              <td><%= emp.gender %></td>
              <td><span class="badge"><%= emp.department %></span></td>
              <td>â‚¹<%= Number(emp.salary).toLocaleString('en-IN', {minimumFractionDigits: 2}) %></td>
              <td>â‚¹<%= tax.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></td>
              <td>â‚¹<%= net.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></td>
              <td><%= formattedDate %></td>
              <td>
                <div class="actions">
                  <a href="/edit/<%= emp.id %>" class="btn-edit" title="Edit">âœï¸</a>
                  <a href="/delete/<%= emp.id %>" class="btn-delete" title="Delete"
                     onclick="return confirm('Delete <%= emp.name %>?')">ğŸ—‘ï¸</a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>

  </div>
</body>
</html>
